<!DOCTYPE html>
<html lang="en">

<%- include('../partials/header.ejs') -%>


    <%- include('../partials/navbar.ejs') -%>

        <div class="container mt-8 md:mt-24">
            <div class="px-8 py-6 bg-white rounded-md shadow-sm ">

                <div class="flex justify-between w-full my-3">
                    <p class="ml-3 text-[22px] text-slate-500">Welcome, <%= user.name %>
                    </p>

                </div>

                <hr />

                <div class="mt-3">

                    <%- include('../partials/messageInfo.ejs') -%>

                        <form action="/api/v1/profile/update" method="post" class="bg-slate-200 p-4 rounded-md">

                            <input type="hidden" name="token" value="<%= token %>" />

                            <div class="flex flex-col gap-1 mb-3">
                                <label for="name" class="text-slate-500">Name</label>
                                <input type="text" name="name" id="name" required value="<%= data.name %>"
                                    class="px-3 py-2 outline-0 border border-stale-500 bg-[#f9f9f9] rounded focus:border-primary-400" />
                            </div>

                            <div class="flex flex-col gap-1 mb-3">
                                <label for="email" class="text-slate-500">Email</label>
                                <input type="email" name="email" id="email" required value="<%= data.email %>" disabled
                                    class="px-3 py-2 outline-0 border border-stale-500 bg-[#f9f9f9] rounded focus:border-primary-400 disabled:bg-slate-300" />
                            </div>

                            <div class="flex flex-col gap-1 mb-3">
                                <label for="password" class="text-slate-500">Password</label>
                                <input type="password" name="password" id="password" autocomplete="new-password"
                                    class="px-3 py-2 outline-0 border border-stale-500 bg-[#f9f9f9] rounded focus:border-primary-400" />
                            </div>

                            <button type="submit"
                                class="px-5 w-full py-2 text-white rounded-sm bg-primary-700 hover:bg-primary transition-all duration-300 ease-in-out">
                                Update Profile
                            </button>
                        </form>
                </div>


            </div>
        </div>

        <%- include('../partials/footer.ejs') -%>